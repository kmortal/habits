generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

//model = tabela
model Habit {
  //@id = primary key
  //@default(uuid()) = Universally Unique IDentifier, autogenerate
  id         String     @id @default(uuid())
  title      String
  created_at DateTime
  DayHabit   DayHabit[]

  //@@map("table name"), without table name = Habit
  @@map("habits")
}

model Day {
  id   String   @id @default(uuid())
  date DateTime
}

model DayHabit {
  id String @id @default(uuid())

  day_id   String
  habit_id String

  //day Day @relation()
  habit Habit @relation(fields: [habitId], references: [id])

  habitId String
}
